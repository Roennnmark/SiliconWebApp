@model AccountDetailsViewModel
@{
    ViewData["Title"] = $"Account Details for {Model.User.FirstName} {Model.User.LastName}";
}

<div class="container">
    <section id="account-details">
        <aside>
            <div class="profile-info">
                <img src="@Model.User." alt="@($"{Model.User.FirstName} {Model.BasicInfo.LastName}")" />
                <h5>@($"{Model.User.FirstName} {Model.User.LastName}")</h5>
                <p>@Model.User.Email</p>
            </div>
            <nav>
                <a class="btn-theme-s" asp-controller="Account" asp-action="Details">Account Details</a>
                <a class="btn-transparent" asp-controller="Auth" asp-action="SignOut">Sign out</a>
            </nav>
        </aside>

        <div class="details">
            <section class="basic-info">
                <form method="post" asp-controller="Account" asp-action="BasicInfo">
                    <h2>Account Details</h2>
                    <h5>Basic Info</h5>

                    <div class="content">
                        <div id="form-firstname" class="input-group">
                            <label asp-for=User.FirstName></label>
                            <span asp-validation-for="User.FirstName"></span>
                            <input asp-for="User.FirstName" />
                        </div>
                        <div id="form-lastname" class="input-group">
                            <label asp-for=User.LastName></label>
                            <span asp-validation-for="User.LastName"></span>
                            <input asp-for="User.LastName" />
                        </div>
                        <div id="form-email" class="input-group">
                            <label asp-for=User.Email></label>
                            <span asp-validation-for="User.Email"></span>
                            <input asp-for="User.Email" />
                        </div>
                        <div id="form-phone" class="input-group">
                            <label asp-for="User.PhoneNumber"></label>
                            <span asp-validation-for="User.PhoneNumber"></span>
                            <input asp-for="User.PhoneNumber" />
                        </div>
@*                         <div id="form-bio" class="input-group">
                            <label asp-for=User.>Bio <span>(optional)</span></label>
                            <textarea asp-for="User.Biography"></textarea>
                        </div> *@
                        <div class="form-buttons">
                            <button class="btn-gray" type="reset">Cancel</button>
                            <button class="btn-theme" type="submit">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
            <hr />
            <section class="address-info">
                <form method="post" asp-controller="Account" asp-action="AddressInfo">
                    <h5>Address</h5>

                    <div class="content">
                        <div id="form-addressline-1" class="input-group">
                            <label asp-for="AdressInfo.Addressline_1"></label>
                            <span asp-validation-for="AdressInfo.Addressline_1"></span>
                            <input asp-for="AdressInfo.Addressline_1"/>
                        </div>
                        <div id="form-addressline-2" class="input-group">
                            <label asp-for="AdressInfo.Addressline_2"></label>
                            <span asp-validation-for="AdressInfo.Addressline_2"></span>
                            <input asp-for="AdressInfo.Addressline_2" />
                        </div>
                        <div id="form-postalcode" class="input-group">
                            <label asp-for="AdressInfo.PostalCode"></label>
                            <span asp-validation-for="AdressInfo.PostalCode"></span>
                            <input asp-for="AdressInfo.PostalCode" />
                        </div>
                        <div id="form-city" class="input-group">
                            <label asp-for="AdressInfo.City"></label>
                            <span asp-validation-for="AdressInfo.City"></span>
                            <input asp-for="AdressInfo.City" />
                        </div>
                        <div class="form-buttons">
                            <button class="btn-gray" type="reset">Cancel</button>
                            <button class="btn-theme" type="submit">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </section>
</div>